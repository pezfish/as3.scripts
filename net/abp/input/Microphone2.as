package net.abp.input {	//import	import flash.media.Microphone;	import flash.media.SoundCodec;	public class Microphone2 {		//var		private var _mic:Microphone;		private var _gain:int;		private var _loopback:Boolean;		private var _echoSuppression:Boolean;		public function Microphone2(loopBack:Boolean = true) {			//init			_mic = new Microphone();			_mic = Microphone.getMicrophone();			_mic.setLoopBack(loopBack);			_mic.setUseEchoSuppression(true);			_mic.setSilenceLevel(0);			_mic.rate = 44;		}				public function set gain(amt:int):void {			_mic.gain = amt;		}				public function get name():Microphone {			return _mic;		}				public function destruct():void {			_mic = null; //--- cleanup		}	}}