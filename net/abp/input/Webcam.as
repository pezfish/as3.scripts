package net.abp.input {	//import	import flash.media.Camera;	import flash.media.Video;	import flash.display.DisplayObjectContainer;	import flash.events.Event;	import flash.events.EventDispatcher;		public class Webcam extends EventDispatcher {		//var		private var _cameras:Array;		private var _cam:Camera;		private var _vid:Video;		private var _camHeight:int;		private var _camWidth:int;		private var _camFPS:int;		private var _camFavorArea:Boolean;		private var _camBandwidth:int;		private var _camQuality:int;		private var _container:DisplayObjectContainer;				public function Webcam(width:int = 320, height:int = 240, fps:int = 30, favorArea:Boolean = true) {			//init			_camHeight = height;			_camWidth = width;			_camFPS = fps;			_camFavorArea = favorArea;			_camQuality = 80;			_camBandwidth = 0;						_cameras = Camera.names;		}				public function start():void {			_cam = Camera.getCamera();			_cam.setQuality(_camBandwidth,_camQuality);			_cam.setMode(_camWidth, _camHeight, _camFPS, _camFavorArea);			_vid = new Video(_camWidth, _camHeight);			_vid.attachCamera(_cam);			_container.addChild(_vid);		}				public function destruct():void { 			//--- cleanup			_cam = null;			_vid = null;			_container = null;			_cameras = null;			//--- cleanup		}						public function set quality(quality:int):void {			_camQuality = quality;		}		public function set bandwidth(bandwidth:int):void {			_camBandwidth = bandwidth;		}		public function set container(cont:DisplayObjectContainer):void {			_container = cont;		}				public function get cameras():Array {			return _cameras;		}						public function get name():Camera {			return _cam;		}	}}